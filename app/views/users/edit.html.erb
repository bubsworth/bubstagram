<div class="container centered-form">
  <h1>Edit Profile</h1>

  <%= form_with model: @user do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "field-input" %>
    </div>
    
    <div class="field">
      <%= f.label :pronouns %>
      <%= f.text_field :pronouns, autofocus: true, autocomplete: "name", class: "field-input" %>
    </div>

    <div class="field">
      <%= f.label :bio %>
      <%= f.text_field :bio, autofocus: true, autocomplete: "bio", class: "field-input" %>
    </div>

    <div class="field">
      <%= f.label :image%>
      <%= f.file_field :image, class: "field-input" %>
      <% if f.object.image.present? %>
       Old image:  <%= f.object.image.filename.to_s %>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: "action-buttons" %>
    </div>
  <% end %>

  <%= link_to "Back", :back %>
</div>