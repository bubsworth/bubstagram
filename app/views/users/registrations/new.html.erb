<div class="container centered-form">  
  <h1>Sign up</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input" %>
    </div>

    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "field-input" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "field-input" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field-input" %>
    </div>

    <div class="field">
      <%= f.label :profile_picture %>
      <%= f.file_field :image, class: "field-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "action-buttons" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>